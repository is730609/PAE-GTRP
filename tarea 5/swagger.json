{
    "swagger": "2.0",
    "info": {
      "version": "1.0.0",
      "title": "API de Tareas",
      "description": "API para administrar tareas utilizando Node.js, Express y MongoDB"
    },
    "host": "localhost:3000",
    "basePath": "/",
    "schemes": ["http"],
    "paths": {
      "/tareas": {
        "get": {
          "summary": "Listar tareas",
          "responses": {
            "200": {
              "description": "Arreglo de objetos con las tareas",
              "schema": {
                "type": "array",
                "items": {
                  "$ref": "#/definitions/Tarea"
                }
              }
            }
          }
        },
        "post": {
          "summary": "Crear una tarea",
          "parameters": [
            {
              "name": "body",
              "in": "body",
              "schema": {
                "$ref": "#/definitions/Tarea"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Objeto almacenado en la base de datos",
              "schema": {
                "$ref": "#/definitions/Tarea"
              }
            }
          }
        }
      },
      "/tareas/{id}": {
        "get": {
          "summary": "Ver una tarea",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "type": "string"
            }
          ],
          "responses": {
            "200": {
              "description": "Objeto que coincida con el ID enviado",
              "schema": {
                "$ref": "#/definitions/Tarea"
              }
            },
            "404": {
              "description": "Tarea no encontrada"
            }
          }
        },
        "put": {
          "summary": "Actualizar una tarea",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "type": "string"
            },
            {
              "name": "body",
              "in": "body",
              "schema": {
                "$ref": "#/definitions/Tarea"
              }
            }
          ],
          "responses": {
            "200": {
              "description": "Objeto actualizado en la base de datos",
              "schema": {
                "$ref": "#/definitions/Tarea"
              }
            },
            "404": {
              "description": "Tarea no encontrada"
            }
          }
        },
        "delete": {
          "summary": "Eliminar una tarea",
          "parameters": [
            {
              "name": "id",
              "in": "path",
              "required": true,
              "type": "string"
            }
          ],
          "responses": {
            "200": {
              "description": "Objeto reci√©n eliminado",
              "schema": {
                "$ref": "#/definitions/Tarea"
              }
            },
            "404": {
              "description": "Tarea no encontrada"
            }
          }
        }
      }
    },
    "definitions": {
      "Tarea": {
        "type": "object",
        "properties": {
          "_id": {
            "type": "string",
            "readOnly": true
          },
          "titulo": {
            "type": "string"
          },
          "descripcion": {
            "type": "string"
          },
          "status": {
            "type": "string",
            "enum": ["pendiente", "en_progreso", "completa"]
          },
          "fechaCreacion": {
            "type": "string",
            "format": "date-time"
          }
        },
        "required": ["titulo", "descripcion"]
      }
    }
  }